<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_adjust_black_24dp">
            </ImageView>

            <TextView
                android:id="@+id/tv_text"
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_image"
                android:layout_marginTop="10dp"
                android:textSize="22sp">

            </TextView>
            <ImageView
                android:id="@+id/card_header_inner_expand_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignBottom="@+id/tv_detail"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_expand_more_black_24dp" />
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_image"
                android:layout_below="@id/tv_text"
                android:textColor="#696969"
                android:text="Description"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
            </TextView>

            <LinearLayout
                android:id="@+id/linearLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_detail"
                android:layout_below="@+id/tv_detail"
                android:orientation="vertical"
                android:visibility="gone">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="400dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_settoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Goal value"
                            android:textSize="18sp">
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_pump1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_pump1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pump 1:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_pump1value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pumpValue" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_pump2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_pump2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pump 2:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_pump2value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pumpValue" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_pump3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_pump3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pump 3:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_pump3value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pumpValue" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_stir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_stir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stir:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_stirvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="stirValue" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_pH"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_pH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pH:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_pHvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pHValue" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_do"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_DO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DO:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_DOvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOValue" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_tmp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_TMP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature:"
                            android:textSize="14sp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_TMPvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TMPValue" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_endifTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Run Time:"
                            android:textSize="18sp">
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10sp">

                        <TextView
                            android:id="@+id/tv_endif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="endif detail"
                            android:textSize="14sp">
                        </TextView>
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/btn_edit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cardview_light_background"
                    android:text="@string/edit"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
