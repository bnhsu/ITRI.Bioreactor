<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="32dp"
                android:src="@drawable/ic_adjust_black_24dp">

            </ImageView>

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_image"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:textSize="24sp">

            </TextView>
            <ImageView
                android:id="@+id/card_header_inner_expand_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignBottom="@+id/tv_detail"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_expand_more_black_24dp" />
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_image"
                android:layout_below="@id/tv_text"
                android:text="Description"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_alignStart="@+id/tv_text">

            </TextView>

            <LinearLayout
                android:id="@+id/linearLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignStart="@+id/tv_detail"
                android:layout_below="@+id/tv_detail"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_settoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal value:"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_alignStart="@+id/tv_text">

                </TextView>
                <TextView
                    android:id="@+id/tv_setto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set to detail"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_alignStart="@+id/tv_text">

                </TextView>
                <TextView
                    android:id="@+id/tv_endifTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run Time:"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_alignStart="@+id/tv_text">

                </TextView>
                <TextView
                    android:id="@+id/tv_endif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="endif detail"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_alignStart="@+id/tv_text">

                </TextView>

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/cardview_light_background"
                    android:text="Edit" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
