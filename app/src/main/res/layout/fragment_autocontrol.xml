<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/autocontrol">

    <fragment
        android:id="@+id/fragment_autocontrollist"
        android:name="org.itri.bioreactor2.ui.fragment.AutoControlListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_autocontrollist" />

    <fragment
        android:id="@+id/fragment_stepview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:name = "org.itri.bioreactor2.ui.fragment.StepViewFragment"
            tools:layout="@layout/fragment_stepview" />



    </LinearLayout>